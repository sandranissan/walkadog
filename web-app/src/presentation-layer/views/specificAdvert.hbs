<div class="blog-single gray-bg">
        <div class="container">
            <div class="row align-items-start">
                <div class="col-lg-8 m-15px-tb">
                    <article class="article">
                        <div class="user-img">
                            <img src="/uploads/{{nameOfFile}}" alt="">
                        </div>
                        <div class="article-title">
                            <h2>{{advertName}}</h2>
                            <div class="media">

                                <div class="media-body">
                                    <label></label>
                                    <span>26 FEB 2020</span>
                                </div>
                            </div>
                        </div>
                        <div class="article-content">

                            <blockquote>
                                <h2>Description: </h2>
                                <p>{{advertDescription}}</p>

                            </blockquote>
                            
                            <p><h3>Contact:</h3> {{contact}}</p>
                        </div>
                       
                    </article>
            </div>
        </div>
    </div> 