<div class="container">
    <div class="row">

        <div class="col-md-8 col-md-offset-2">

            <div  class="">

                <h1>Create Advert</h1>

                <form action="/adverts/createAdvert" method="POST">

                    <div class="form-group">
                        <label for="title">Title <span class="require">*</span></label>
                        <input type="text" class="form-control" name="advertName" />
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea rows="5" class="form-control" name="advertDescription"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="contact">Contact <span class="require">*</span></label>
                        <input type="text" class="form-control" name="contact" />
                    </div>

                    <div class="form-group">
                        <p><span class="require">*</span> - required fields</p>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-dark btn-lg btn-block" role="button" value="Create">
                        <button class="btn btn-default">
                            Cancel
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>